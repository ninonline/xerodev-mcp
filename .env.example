# Xero Integration Foundry - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED: Encryption Key for OAuth Token Storage
# ============================================================================
# Generate with: openssl rand -hex 32
# MUST be exactly 64 hexadecimal characters (256 bits)
MCP_ENCRYPTION_KEY=

# ============================================================================
# Server Mode
# ============================================================================
# Options: mock | live
# - mock: Uses test fixtures, no Xero API calls (default)
# - live: Connects to real Xero API (requires OAuth tokens)
MCP_MODE=mock

# ============================================================================
# Database Configuration
# ============================================================================
# Path to SQLite database file
# Default: ./data/xerodev.db
MCP_DATABASE_PATH=./data/xerodev.db

# ============================================================================
# Logging
# ============================================================================
# Options: debug | info | warn | error
LOG_LEVEL=info

# ============================================================================
# Auto-seed on Startup (Mock Mode Only)
# ============================================================================
# When true, loads test fixtures into database on startup
AUTO_SEED_ON_START=true

# ============================================================================
# Xero OAuth Credentials (Live Mode Only)
# ============================================================================
# Only needed when MCP_MODE=live
# Register your app at: https://developer.xero.com/myapps
# XERO_CLIENT_ID=
# XERO_CLIENT_SECRET=
# XERO_REDIRECT_URI=http://localhost:3000/callback
